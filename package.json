{
  "name": "node-boilerplate-app",
  "version": "0.0.1",
  "description": "boilerplate nodejs application with typescript",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "build": "rimraf target && tsc",
    "dev": "nodemon -x node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm src/app.ts",
    "start": "ROARR_LOG=true node --loader ts-node/esm target/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "node",
    "node21"
  ],
  "author": "Jorit Kleine-MÃ¶llhoff <joppich@bricknet.de>",
  "license": "Apache-2.0",
  "dependencies": {
    "roarr": "^7.21.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@tsconfig/node21": "^21.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  }
}
